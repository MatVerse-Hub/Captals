# IA-MetaMask Configuration
# Copy this file to .env and fill in your values

# MetaMask Private Key (without 0x prefix)
# WARNING: Keep this secret! Never commit .env file
PRIVATE_KEY=your_metamask_private_key_without_0x_prefix

# Polygon RPC URL (Amoy Testnet by default)
RPC=https://rpc-amoy.polygon.technology

# WalletConnect Project ID (get free at cloud.walletconnect.com)
# Leave empty to use public relay (may be slower)
WALLETCONNECT_PROJECT_ID=

# API Server Port (default: 3001)
API_PORT=3001

# NFT Contract Address (MatVerse Evidence NFT)
NFT_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# Optional: Enable debug logging
DEBUG=false
